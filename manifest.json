{
	"manifest_version": 2,
	"name": "KAG Server Browser",
	"short_name": "KAG Servers",
	"version": "1.0",
	"author": "epsilon",
	"description": "The KAG server browser conveniently in your web browser!",
	"permissions": ["storage", "notifications"],
	"icons": {
		"16": "images/kag_icon_16.png",
		"32": "images/kag_icon_32.png",
		"48": "images/kag_icon_48.png",
		"128": "images/kag_icon_128.png"
	},
	"browser_action": {
		"default_popup": "html/popup.html",
		"default_icon": {
			"16": "images/kag_icon_16.png",
			"32": "images/kag_icon_32.png",
			"48": "images/kag_icon_48.png",
			"128": "images/kag_icon_128.png"
		}
	},
	"background": {
		"scripts": ["libraries/jquery.min.js", "scripts/utilities.js", "scripts/background.js"]
	},
	"options_ui": {
		"chrome_style": true,
		"page": "html/options.html"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "kag-server-browser@epsi.dev"
		}
	}
}
